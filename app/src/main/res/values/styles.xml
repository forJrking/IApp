<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme Light -->
    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/selectable_item_background_general_light_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_light_pressed</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_light</item>
        <item name="referenceBackgroundNormal">@drawable/reference_background_light</item>
        <item name="referenceBackgroundAccent">@drawable/reference_background_accent</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight" />

    <style name="AppThemeLight.FitsStatusBar" />

    <!-- App Theme Dark -->
    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/selectable_item_background_general_dark_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_dark_pressed</item>
        <item name="widgetBackgroundTitle">@color/colorPrimary</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_dark</item>
        <item name="mainNavItemTextColor">@color/main_nav_item_text_color_dark</item>
        <item name="referenceBackgroundNormal">@drawable/reference_background_dark</item>
        <item name="referenceBackgroundAccent">@drawable/reference_background_accent</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark" />

    <style name="AppThemeDark.FitsStatusBar" />

    <!-- App Theme Launch -->
    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- App Dialog Light -->
    <style name="AppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <!-- App Dialog Dark -->
    <style name="AppDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <!-- App Widget -->
    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->
    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->
    <style name="AppWidget.ItemGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <!-- Navigation -->
    <style name="AppWidget.NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:textColor">?attr/mainNavItemTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundGeneral</item>
    </style>

    <style name="AppWidget.NavigationItemBadger">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppWidget.NavigationItemDeepLineGap" parent="AppWidget.DeepLine">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Button -->
    <style name="AppWidget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_image</item>
    </style>

    <style name="AppWidget.Button.Stroke">
        <item name="android:textColor">@drawable/button_stroke_text_color</item>
        <item name="android:background">@drawable/button_stroke_image</item>
    </style>

    <!-- Reply Window Anim -->
    <style name="AppWidget.ReplyWindowAnim">
        <item name="android:windowEnterAnimation">@anim/reply_window_popup_in</item>
        <item name="android:windowExitAnimation">@anim/reply_window_popup_out</item>
    </style>


    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!-- 设置向导标题栏 -->

    <style name="SetupTitleBar" parent="TitleBarStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>


   
